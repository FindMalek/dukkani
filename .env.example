# Base/shared configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dukkani
NEXT_PUBLIC_NODE_ENV=local
NEXT_PUBLIC_CORS_ORIGIN=http://localhost:3003
NEXT_PUBLIC_ALLOWED_ORIGIN=*
NEXT_PUBLIC_DASHBOARD_URL=http://localhost:3003
NEXT_PUBLIC_STORE_DOMAIN=localhost:3004

# Auth providers (BetterAuth)
BETTER_AUTH_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=

# Telegram (API + storefront)
TELEGRAM_BOT_NAME=your_bot_name
TELEGRAM_API_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret

# Storage (Supabase)
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_secret
STORAGE_BUCKET_NAME=production
STORAGE_MAX_FILE_SIZE=5242880
STORAGE_ALLOWED_MIME_TYPES=image/*

# OpenTelemetry
OTEL_SERVICE_NAME=dukkani
OTEL_SAMPLING_RATE=1.0
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=
OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=
OTEL_EXPORTER_OTLP_LOGS_ENDPOINT=
OTEL_EXPORTER_OTLP_HEADERS=Authorization=Basic%20YOUR_BASE64_ENCODED_CREDENTIALS
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
OTEL_EXPORTER_OTLP_COMPRESSION=gzip

# Observability (optional)
BETTER_STACK_API_KEY=

# Vercel (optional, auto-set in Vercel deployments)
VERCEL_BRANCH_URL=
VERCEL_PROJECT_PRODUCTION_URL=
VERCEL_REGION=
VERCEL_DEPLOYMENT_ID=
VERCEL_PROJECT_ID=
VERCEL=
