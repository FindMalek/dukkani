{
	"name": "@dukkani/db",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./src/index.ts"
		},
		"./env": {
			"types": "./dist/env.d.ts",
			"default": "./src/env.ts"
		},
		"./*": {
			"types": "./dist/*.d.ts",
			"default": "./src/*.ts"
		},
		"./prisma/generated": {
			"types": "./prisma/generated/client.d.ts",
			"default": "./prisma/generated/client.ts"
		},
		"./prisma/generated/enums": {
			"types": "./prisma/generated/enums.ts",
			"default": "./prisma/generated/enums.ts"
		}
	},
	"scripts": {
		"postinstall": "pnpm db:generate",
		"build": "tsdown",
		"db:push": "dotenvx run -f ../../.env -- prisma db push",
		"db:studio": "dotenvx run -f ../../.env -- prisma studio",
		"db:generate": "dotenvx run -f ../../.env --env=\"CI=true\" --ignore=MISSING_ENV_FILE -- prisma generate",
		"db:migrate": "dotenvx run -f ../../.env -- prisma migrate dev",
		"db:migrate:deploy": "prisma migrate deploy",
		"db:reset": "dotenvx run -f ../../.env -- prisma migrate reset --force",
		"db:seed": "dotenvx run -f ../../.env -- tsx src/seed/index.ts",
		"db:reset-and-seed": "pnpm db:reset && pnpm db:seed",
		"db:format": "prisma format",
		"clean": "rm -rf dist node_modules prisma/generated"
	},
	"peerDependencies": {
		"typescript": "catalog:"
	},
	"dependencies": {
		"@dukkani/env": "workspace:*",
		"@dukkani/logger": "workspace:*",
		"@prisma/client": "catalog:",
		"@prisma/client-runtime-utils": "^7.0.0",
		"bcryptjs": "^2.4.3",
		"@dotenvx/dotenvx": "catalog:",
		"nanoid": "catalog:",
		"zod": "catalog:",
		"@neondatabase/serverless": "^0.10.4",
		"@prisma/adapter-neon": "^7.0.0",
		"@prisma/adapter-pg": "^7.0.0",
		"ws": "^8.18.2"
	},
	"devDependencies": {
		"@dukkani/config": "workspace:*",
		"@types/bcryptjs": "^2.4.6",
		"prisma": "catalog:",
		"tsdown": "catalog:",
		"tsx": "catalog:",
		"@types/ws": "^8.18.1"
	}
}
